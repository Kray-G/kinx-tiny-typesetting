using pkg.Develop;

var pkgname = "typesetting";
var version = "0.0.2";

new PackageUpdater($$, pkgname, version).update { &(util)
    Directory.change("src") {
        Directory.walk(".") {
            util.dircopy(_1, util.root / _1.filename());
        };
    };
    util.dircopy("docs", util.root / "docs");
};
